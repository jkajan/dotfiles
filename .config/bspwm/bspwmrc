#! /bin/sh

setxkbmap fi &
xsetroot -cursor_name left_ptr &
nitrogen --restore &
syncthing &
light-locker &
telegram-desktop &
st -c "Neomutt" neomutt &
polybar spacebar &
redshift 63.09:21.61 &
steam-native &
sxhkd &

bspc monitor -d 1 2 3 4 5 M T N S

bspc config border_width         2
bspc config window_gap          12
bspc config top_padding			25
bspc config borderless_monocle 	true
bspc config paddingless_monocle false
bspc config single_monocle		true

bspc config normal_border_color \#f2e5bc
bspc config presel_feedback_color \#d5c4a1
bspc config focused_border_color \#504945

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true
bspc config focus_follows_pointer true
bspc config auto_cancel true

bspc rule -a TelegramDesktop desktop='^7'
bspc rule -a 'Google Play Music Desktop Player' desktop='^6'
bspc rule -a Vlc sticky=on state='pseudo_tiled'
bspc rule -a 'Neomutt' desktop='^8'
bspc rule -a 'Steam' desktop='^9'

